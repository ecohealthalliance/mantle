.btn-file
  position relative
  overflow hidden
  span
    display inline-block
    margin 0
  input[type=file]
    position absolute
    top 0
    right 0
    min-width 100%
    min-height 100%
    font-size 100px
    text-align right
    opacity 0
    outline none
    background white
    cursor inherit
    display block

.file-name-wrap
  position relative
  height 35px
  .remove
    centerPosition(0, -50%)
    position absolute
    right 10px
    top 50%
    font-size 20px
    cursor pointer
    z-index $bottom-layer
    transition()
    &:hover
      color $primary-strong
      transition()

.file-name
.input-group .form-control:first-child
  padding-right 30px
  white-space nowrap
  overflow hidden
  text-overflow ellipsis
  color darken($m-gray, 10%)
  border-top-left-radius 0
  border-bottom-left-radius 0
  border-left 1px solid $m-gray
  border-top-right-radius 4px
  border-bottom-right-radius 4px
  transition()
  &.has-file
    color darken($d-gray, 20%)
    transition()
  &:focus
    border-color $m-gray
