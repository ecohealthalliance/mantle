html
body
  height 100%

body
  font-family inherit
  > div
    position relative
    min-height 100%

.page-wrap
  position relative
  min-height 100%

.content-wrap
  padding-top 20px
  padding-bottom $footer-height-actual+10

h2
  color $primary

h3
  color $secondary

h4
  color $body-text

h5
  font-weight 400
  color $d-gray

.view-header
  margin-bottom 15px
  +below(1)
    margin-bottom 25px
  h1
    margin-bottom 0

a
button
.btn
  transition()
  &:hover
    transition()

a
  color $primary-strong
  &:hover
  &:focus
    color $primary

.btn
  border-width 2px
  .fa
    vAlign()
    padding 0 0 0 5px
    font-size 110%
    line-height 0

.btn-primary
  makeButton($secondary)

.btn-default
  makeButton($ll-gray, $body-text, true)

.btn-success
  makeButton($confirm)

.btn-danger
  makeButton($primary-strong)

.button-default['disabled']
.btn['disabled']
  background lighten($secondary-light, 20%)
  color $body-text
  text-shadow none

select.form-control
input.form-control
textarea.form-control
  border 2px solid $m-gray
  font-size 14px
  font-weight normal
  &:focus
    outline 0
    box-shadow none
    border-color $secondary

input[type="submit"]
  +below(4)
    width 40%
    font-size inherit
  +mobile()
    width 100%
    padding 12px
    font-size 110%


.checkbox
  label
    span
      font-weight bold

.col-sm-0
  width 0%

.rm-pad
  padding 0

.rm-pad-top
  padding-top 0

.rm-pad-btm
  padding-bottom 0

.rm-margin-top
  margin-top 0

.rm-margin-btm
  margin-bottom 0

.inline
  display inline-block
  vertical-align middle

.toggleSwitch
  position relative
  width 100px
  height 30px
  border 2px solid $m-gray
  border-radius 15px
  cursor pointer
  &::hover
    border-color red
  &.true
  &.false
    padding-top 3px
    padding-left 30px
    transition .2s
    &::before
      content ''
      display inline-block
      border-radius 100%
      background #CCC
      height 20px
      width 20px
      position absolute
      top 50%
      transform translate(0, -50%)
      left 5px
      transition .2s
  &.false
    padding-right 30px
    padding-left 15px
    &::before
      right 5px
      left auto

for $num in 1 2 3 4 5 6
  .space-btm-{$num}
    margin-bottom $num*10px

  .space-top-{$num}
    margin-top $num*10px

for $num in 1 2 3
  .border-btm-{$num}
    addBorder('bottom', $num, $l-gray)

  .border-top-{$num}
    addBorder('top', $num, $l-gray)
