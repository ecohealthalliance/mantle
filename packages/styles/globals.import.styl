html
body
  height 100%

body
  @extend .body-font
  color $body-text

h1
h2
h3
h4
  @extend .header-font
  color $primary
  font-weight 700

h1
  font-size 42px
  font-weight 800

h2
  margin-bottom 20px
  margin-top 0
  font-size 32px
  color $primary

h2.section-title
  margin-top 0
  font-size 40px

h2 a.more-info
  font-size 12px
  color $btn-default

h3
  margin-top 0
  margin-bottom 15px
  font-size 20px
  color $secondary

h4
  color $body-text
  font-weight 600
  font-size 15px

h5
  font-size 100%
  font-weight 600
  color $d-gray

a
button
.btn
  transition()
  &:hover
    transition()

a
  color $primary-strong
  &:hover
  &:focus
    color $primary

textarea
  display block
  width 100%
  height 34px
  padding 6px 12px
  border 1px solid #ccc
  border-radius 4px
  box-shadow inset 0 1px 1px rgba(0, 0, 0, .075)
  background-color #fff
  background-image none
  font-size 14px
  line-height 1.42857143
  color #555
  transition $border-color ease-in-out .15s, box-shadow ease-in-out .15s

select.form-control
input.form-control
textarea
textarea.form-control
  border 2px solid $m-gray

input
textarea
.form-control
  &:focus
    outline 0
    box-shadow none
    border-color $secondary

.page-wrap
  position relative
  min-height 100%

.content-wrap
  padding-bottom $footer-height-actual+10

.rm-pad
  padding 0

.rm-pad-top
  padding-top 0

.rm-pad-btm
  padding-bottom 0

.btn
  border-width 2px
  .fa
    vAlign()
    padding 0 0 0 5px
    font-size 110%
    line-height 0

.btn-primary
  makeButton($secondary)

.btn-success
.at-btn
  makeButton($confirm)

.btn-danger
  makeButton($primary-strong)

.button-default['disabled']
.btn['disabled']
  background lighten($secondary-light, 20%)
  color $body-text
  text-shadow none

.col-sm-0
  width 0%

for $num in 1 2 3 4 5 6
  .space-btm-{$num}
    margin-bottom $num*10px

  .space-top-{$num}
    margin-top $num*10px

for $num in 1 2 3
  .border-btm-{$num}
    addBorder('bottom', $num, $l-gray)

  .border-top-{$num}
    addBorder('top', $num, $l-gray)
