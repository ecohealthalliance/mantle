.reactive-table
  border-bottom 2px solid $border-gray

.reactive-table-navigation
  label
    display inline-block
  .previous-page
  .next-page
    font-size 150%
    line-height 0

  .rows-per-page
  .page-number
    span
      display inline-block
      padding 0 1px
      margin 0
      font-weight normal
    .page-number-count
    .rows-per-page-count
    .form-control
      font-weight bold
    .form-control
      margin 0
      text-align center
      font-weight bold
