form
  label
    margin-bottom 10px
    span
      display block
      margin-bottom 5px

select.form-control
input.form-control
textarea.form-control
  border 2px solid $m-gray
  font-size 14px
  font-weight normal
  &:focus
    outline 0
    box-shadow none
    border-color $secondary

input[type="submit"]
  margin 20px 0
  padding 10px
  +above(2)
    width 40%
    font-size inherit
  @extend .btn-block-mobile

textarea
  min-height 200px

.checkbox
  label
    span
      font-weight bold

.form-inline
  .form-control
    vertical-align initial
