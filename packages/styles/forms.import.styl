select.form-control
input.form-control
textarea.form-control
  border 2px solid $m-gray
  font-size 14px
  font-weight normal
  transition .2s
  &:focus
    outline 0
    box-shadow none
    border-color $secondary
  &.error
    border-color $primary-strong
    background lighten($primary, 95%)
    transition .2s

input[type="submit"]
  margin 20px 0
  padding 10px
  +below(4)
    width 40%
    font-size inherit
  +mobile()
    width 100%
    padding 12px
    font-size 110%

label
  margin-bottom 10px
  span
    display block
    margin-bottom 5px
  &.required
    > span
      afterAsterisk()

.required-text
  margin-bottom 15px
  color $d-gray
  > span
    color $primary-strong
    font-weight bold

textarea
  min-height 200px

.checkbox
  label
    span
      font-weight bold

.help-inline
  margin 5px 0
  font-weight 600
  color $primary-strong
  &:not(:empty)
    &::before
      display inline-block
      margin-right 3px
      @extend .icon
      content '\f06a'
      font-weight normal
