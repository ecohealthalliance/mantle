// COLORS
$primary = rgba(157, 83, 42, 1)
$primary-dark = darken($primary, 20%)
$primary-light = lighten($primary, 20%)
$primary-trans = rgba($primary, 0.9)
$primary-strong = rgba(232, 95, 64, 1)
$primary-strong-light = rgba(248, 237, 230, 1)
$primary-trans-strong = rgba($primary-strong, 0.9)
$primary-subtle = lighten($primary, 90%)
$primary-dark = darken($primary, 20%)
$primary-light = lighten($primary, 20%)
$secondary = rgba(63, 136, 160, 1)
$secondary-subtle = lighten($secondary, 90%)
$secondary-dark = darken($secondary, 20%)
$secondary-light = lighten($secondary, 20%)
$secondary-trans = rgba($secondary, 0.9)
$dd-gray = #333
$d-gray = #999
$ll-gray = #f9f9f9
$l-gray = #e7e7e7
$m-gray = #CCC
$btn-default = $secondary
$white-trans = rgba(255,255,255,.7)

$body-text = dd-gray

$confirm = rgba(103, 169, 104, 1) // Green
$deny = $primary-strong // Red
$pending = rgba(239, 172, 86, 1) // Yellow

$header-footer-BG = $secondary
$nav-hover = $primary

$border-gray = #DDD
$mapBG = #CDD2D4

// HEADER & FOOTER
$header-height = 50px
$footer-height = 75px
$footer-logo-height = 60px
$footer-padding = ($footer-height - $footer-logo-height) / 2
$footer-height-actual = $footer-height
$footer-height-mobile-actual = $footer-height*2
$footer-height = $footer-height+$footer-padding+5
$footer-height-mobile = $footer-height*2

$header-positioning-space = $header-height
$footer-positioning-space = $footer-height
$header-positioning-space-mobile = $header-height-mobile
$footer-positioning-space-mobile = $footer-height-mobile

