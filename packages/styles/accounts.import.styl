ul.nav
  li.dropdown:hover
    background #EEEEEE
    > .dropdown-menu
      display block

.dropdown-menu
  padding 0
  > li
    border-bottom 1px solid $border-gray
    &:last-of-type
      border 0
    > a
      clearFix()
      position relative
      padding 8px 10px
      span
        padding-right 25px
      i
        centerPosition(0, -50%)
        position absolute
        right 5px
        top 50%
        width 20px
        color lighten($body-text, 50%)
