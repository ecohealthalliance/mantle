.organizations-table
  border-top 1px solid $l-gray
  .organization-wrap
    border-bottom 1px solid $l-gray
    .container
        padding 20px 0

.organization-name
  font-size 1.4em
  font-weight 600
  +below(1)
    font-size 1.25em

.member-table
  border 1px solid $l-gray
  border-radius 3px
  thead
    background $ll-gray

.member-count
  vertical-align middle
  bodyFont()
  font-size 60%
  font-weight normal
  color $d-gray
  +below(2)
    font-size 90%

