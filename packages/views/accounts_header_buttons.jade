template(name="accountsHeaderButtons")
  if currentUser
    if Template.subscriptionsReady
      li.dropdown
        a.dropdown-toggle.admin-settings(href='#' data-toggle='dropdown' aria-expanded='false')
          span #{currentUserInfo.firstName} #{currentUserInfo.lastName}
          i.fa.fa-sort-desc
        ul.dropdown-menu(role='menu')
          li
            a(href="{{ path route='profileDetail' params=currentUserInfo }}")
              span Profile
              i.fa.fa-user
          li
            a.sign-out(href='#')
              span Sign Out
              i.fa.fa-sign-out
  else
    li
      a.sign-in.btn.navbar-btn
        span Sign In
        i.fa.fa-sign-in
