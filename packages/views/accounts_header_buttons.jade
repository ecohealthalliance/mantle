template(name="accountsHeaderButtons")
  if currentUser
    if Template.subscriptionsReady
      li.dropdown
        a.dropdown-toggle.admin-settings(href='#' data-toggle='dropdown' aria-expanded='false')
          span=currentUserName
          i.fa.fa-sort-desc
        ul.dropdown-menu(role='menu')
          li
            a(href="{{path route='profileEdit'}}")
              span Edit Profile
              i.fa.fa-user
          li
            a.sign-out(href='#')
              span Sign Out
              i.fa.fa-sign-out
  else
    li
      a.sign-in.btn.navbar-btn
        span Sign In
        i.fa.fa-sign-in
