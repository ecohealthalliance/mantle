template(name="accountsHeaderButtons")
  if currentUser
    li.dropdown
      a.dropdown-toggle.admin-settings(href='#' data-toggle='dropdown' aria-expanded='false')
        i.fa.fa-gear
        span Account
      ul.dropdown-menu(role='menu')
        li
          a(href="{{path route='profileEdit'}}")
            span Edit Profile
            i.fa.fa-user
        li
          a.sign-out(href='#')
            span Sign Out
            i.fa.fa-sign-out
  else
    li
      a.sign-in.navbar-btn
        i.fa.fa-sign-in
        span Sign In
  +accountsModal state=state
