template(name="organizationDetail")
  .organization-detail
    .container
      .view-header
        h1.inline= organization.name
        if currentUser
          unless userIsMember
            a.btn.btn-default.header-btn.join-organization
              span Join
              i.fa.fa-users
      unless memberCount
        +paragraphText text=organization.description
      else
        .row
          .col-sm-7
            +paragraphText text=organization.description
          .col-sm-5
            h2 Members
              span.member-count (#{memberCount})
            table.table
              thead
                tr
                  th Name
                  th Email
              tbody
                each members
                  tr
                    td.name=fullName
                    td.email=emailAddress
