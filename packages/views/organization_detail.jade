template(name="organizationDetail")
  .organization-detail
    .container
      .row
        .col-sm-12
          if editingName
            input#organization-name(type="string" name='name')
            button.btn.save-name-button Save
          else
            p.lead= organization.name
            button.btn-link.edit-name-button Edit
          if editingDescription
            input#organization-description(type="string" name='description')
            button.btn.save-description-button Save
          else
            p= organization.description
            button.btn-link.edit-description-button Edit
