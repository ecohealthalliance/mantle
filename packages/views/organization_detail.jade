template(name="organizationDetail")
  .organization-detail
    .container
      h1= organization.name
      .row
        .col-sm-10
          +paragraphText text=organization.description
      .row
        .panel.panel-default
          .panel-heading Members
          .panel-body
            unless userIsMember
              a.btn.btn-default.join-organization Join
          table.table
            thead
              tr
                th Name
                th Email
            tbody
              each admins
                tr
                  td.name=fullName
                  td.email=emailAddress
                  td.role Admin
              each members
                tr
                  td.name=fullName
                  td.email=emailAddress
                  td.role Member
