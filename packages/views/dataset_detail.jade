template(name="datasetDetail")
  .container
    .row
      .col-sm-12
        .dataset-detail
          p= fileContents
          +with dataset
            h1.inline
              if name
                span.dataset-name=name
              else
                span.dataset-file-name=file.original.name
            +with file
              p= url
              if isUploaded
                a.btn.btn-primary.pull-right.btn-block-mobile(href="{{this.url download=true}}" target="_blank") Download
              else
                p Upload in progress
          table.table.dataset-table
