template(name="profileDetail")
  .container.profile-detail
    .profile-name-title.space-btm-2
      .view-header
        h1.inline= userProfile.fullName
        a.btn.btn-default.profile-edit-link.header-btn(href= "{{path route='profileEdit'}}")
          span Edit Profile
          i.fa.fa-edit
      p.job-title.rm-margin-btm= userProfile.jobTitle
      if userProfile.emailAddress
        a.with-icon-left(href="mailto:#{userProfile.emailAddress}")
          i.fa.fa-envelope
          span= userProfile.emailAddress
    .row
      if userProfile.bio
        .col-sm-10
          h3 About
          .bio.space-btm-4
            +paragraphText text=userProfile.bio
