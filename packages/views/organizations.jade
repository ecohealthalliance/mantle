template(name="organizations")
  if currentUser
    .container.view-header
      h2.inline Organizations
      a.btn.btn-default.new-organization-link.header-btn(href="{{path route='newOrganization'}}")
        span Create
        i.fa.fa-plus
    table.table.table-striped.organizations-table
      tbody
        each organizations
          tr.organization-wrap
            .container
              .row
                .col-sm-3
                  td
                    a.organization-name(href="{{path route='organizationDetail' params=this}}")= name
                .col-sm-9
                  td.organization-description {{truncated description}}
  else
    .container
      .row
        .col-sm-12
          p Please log in or sign up to continue.
