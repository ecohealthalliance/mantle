template(name="organizations")
  if currentUser
    .container
      .row
        .col-sm-12
          h2 Organizations
          a.btn.btn-default.new-organization-link(href="{{path route='newOrganization'}}") Create
    table.table.table-striped.organizations-table
      tbody
        each organizations
          tr
            a(href="{{path route='organizationDetail' params=this}}")
              .container
                .row
                  .col-sm-3
                    td
                      p.lead= name
                  .col-sm-9
                    td= description
  else
    .container
      .row
        .col-sm-12
          p Please log in or sign up to continue.
