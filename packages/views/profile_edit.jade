template(name="profileEdit")
  .container
    if Template.subscriptionsReady
      form
        .row
          .col-sm-12
            label Bio
              input.form-control(name="bio" type="string" value=userProfile.bio)
            input(name="profileId" type="string" hidden="true" value=userProfile._id)
        .row
          .col-sm-12
            input.btn.btn-primary(type="submit" value="Save")
