template(name="profileEdit")
  .container.profile-edit
    if currentUser
      if Template.subscriptionsReady
        .view-header
          h1.inline Edit Profile
          a.btn.btn-default.profile-detail-link.header-btn(href= "{{path route='profileDetail' params=userProfile}}")
            span View Public Profile
            i.fa.fa-user
        .row
          .col-md-8
            form#edit-profile-form
              .row
                .col-md-8
                  label
                    span Full Name
                    input#profile-fullname.form-control(name="fullName" type="text" value=userProfile.fullName)
              .row
                .col-md-8
                  label
                    span Job Title
                    input#profile-jobtitle.form-control(name="jobTitle" type="text" value=userProfile.jobTitle)
              label
                span Biography
                textarea#profile-bio.form-control(name="bio") #{userProfile.bio}
              .checkbox
                label
                  input#profile-email-hidden(name="emailHidden" type="checkbox" checked=userProfile.emailHidden)
                  span Hide Email Address?
              input.btn.btn-primary(type="submit" value="Save")
    else
      p Please log in or sign up to continue.
