template(name="profileEdit")
  .container.profile-edit
    if currentUser
      if Template.subscriptionsReady
        .view-header
          h1.inline Edit Profile
          a.btn.btn-default.profile-detail-link.header-btn(href= "{{path route='profileDetail' params=userProfile}}")
            span View Public Profile
            i.fa.fa-user
        .row
          .col-md-8
            form#edit-profile-form
              .row.space-btm-1
                .col-md-6
                  label
                    span First Name
                    input#profile-firstname.form-control(name="firstName" type="text" value=userProfile.firstName)
                .col-md-6
                  label
                    span Last Name
                    input#profile-lastname.form-control(name="lastName" type="text" value=userProfile.lastName)
                .col-md-6
                  label
                    span Email
                    input#profile-emailAddress.form-control(name="emailAddress" type="email" value=userProfile.emailAddress)
              .row.space-btm-1
                .col-md-6
                  label
                    span Job Title
                    input#profile-jobtitle.form-control(name="jobTitle" type="text" value=userProfile.jobTitle)
                .col-md-6
                  label
                    span Organization
                    input#profile-organization.form-control(name="organization" type="text" value=userProfile.organization)
              label
                span Biography
                textarea#profile-bio.form-control(name="bio") #{userProfile.bio}
              .checkbox
                label
                  input#profile-email-hidden(name="emailHidden" type="checkbox" checked=userProfile.emailHidden)
                  span Hide Email Address?
              input.btn.btn-primary(type="submit" value="Save")
    else
      p Please log in or sign up to continue.
