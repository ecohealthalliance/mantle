template(name="fileInput")
  .input-group
    .input-group-btn
      label.btn.btn-default.btn-file
        span Choose file
        i.fa.fa-folder-open
        input.upload(name=name type="file")
    .file-name-wrap
      input.form-control.file-name(value=fileName placeholder="No file selected" readonly)
      if fileName
        span.remove
          i.fa.fa-times-circle
